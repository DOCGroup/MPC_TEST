#!build
default:
	nobuild
	:cx_option=exceptions
	:cx_option=std_namespaces
	:language=cxx
	:config_setting=longlong
	:cx_mode=ansi
build/build_exe.bld
	program
	:object_dir=build/.obj
	:sysincdirs=build
	:libdirs=build
build/build_lib.bld
	shared_library
	:config_setting=pic
	:object_dir=build/.shobj
	:sysincdirs=build
	:libdirs=build
